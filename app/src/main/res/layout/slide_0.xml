<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        style="@style/IntroSliderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/slideAnimation"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        app:lottie_autoPlay="true"
        app:lottie_fileName="animation_0.json"
        app:lottie_loop="true"
        app:lottie_speed=".4" />

    <TextView
        android:id="@+id/slideDescriptiom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:text="'SHISHIR' is the Annual Cultural Fest of the National Institute of Technology, Meghalaya."
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</LinearLayout>